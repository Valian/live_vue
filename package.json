{
  "name": "live_vue",
  "version": "0.6.1",
  "description": "E2E reactivity for Vue and LiveView",
  "license": "MIT",
  "author": "Jakub Ska≈Çecki <jakub@skalecki.dev>",
  "type": "module",
  "scripts": {
    "format": "npx prettier --write assets",
    "build": "rm -rf priv/static && tsc --project tsconfig.client.json && tsc --project tsconfig.server.json",
    "dev": "concurrently \"tsc --watch --project tsconfig.client.json\" \"tsc --watch --project tsconfig.server.json\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "e2e:install": "cd test/e2e && npm install",
    "e2e:server": "MIX_ENV=e2e mix run test/e2e/test_helper.exs",
    "e2e:test": "cd test/e2e && npm run build && npx playwright test",
    "e2e:test:headed": "cd test/e2e && npm run build && npx playwright test --headed",
    "e2e:test:debug": "cd test/e2e && npm run build && npx playwright test --debug"
  },
  "devDependencies": {
    "@types/node": "^22.9.1",
    "@types/phoenix_live_view": "^0.20.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.0.1",
    "jsdom": "^26.1.0",
    "prettier": "2.8.7",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vitest": "^3.2.4",
    "vue": "^3.5.10"
  },
  "main": "priv/static/index.js",
  "types": "priv/static/index.d.ts",
  "exports": {
    "./vitePlugin": {
      "import": "./priv/static/vitePlugin.js",
      "types": "./priv/static/vitePlugin.d.ts"
    },
    "./server": {
      "import": "./priv/static/server.js",
      "types": "./priv/static/server.d.ts"
    },
    ".": {
      "import": "./priv/static/index.js",
      "types": "./priv/static/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Valian/live_vue.git"
  },
  "files": [
    "README.md",
    "LICENSE.md",
    "package.json",
    "priv/static/*",
    "priv/static/*.d.ts"
  ],
  "overrides": {
    "nanoid": "^3.3.8",
    "rollup": "^4.22.4"
  }
}
