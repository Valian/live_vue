{
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "skipLibCheck": true,

      /* Remove Types for Vite to fix the build issue */
      // "types": ["vite/client"],
  
      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "preserve",
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      
      "paths": {
        "@/*": ["./*"]
      },

      /* Type definitions */
      "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": [
      "vue/**/*.vue", 
      "js/**/*.ts", 
      "js/**/*.js",
      "js/**/*.tsx",
      "types/**/*.ts", 
      "types/**/*.d.ts", 
      "*.config.ts"
    ],
    "exclude": ["node_modules"]
  } 