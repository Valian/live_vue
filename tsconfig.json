{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "node",
    "paths": {
      "live_vue": ["./priv/static/index"]
    },
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./priv/static",
    "emitDeclarationOnly": false,
    "outDir": "./priv/static",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/deps/**/*.*"
  ]
}
