{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "live_vue": ["./assets/index"]
    }
  },
  "include": ["assets/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
